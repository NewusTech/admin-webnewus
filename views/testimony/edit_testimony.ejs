<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
  <title>Edit Testimony &mdash; Stisla</title>

  <!-- General CSS Files -->
  <link rel="stylesheet" href="/assets/modules/bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="/assets/modules/fontawesome/css/all.min.css">

  <!-- Template CSS -->
  <link rel="stylesheet" href="/assets/css/style.css">
  <link rel="stylesheet" href="/assets/css/components.css">

  <!-- Start GA -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-94034622-3"></script>
  <script>
    window.dataLayer = window.dataLayer || [];

    function gtag() {
      dataLayer.push(arguments);
    }
    gtag('js', new Date());

    gtag('config', 'UA-94034622-3');
  </script>
  <!-- /END GA -->
</head>

<body>
  <div id="app">
    <!-- Sidebar -->
    <%- include('../sidebar.ejs') %>

    <!-- Main Content -->
    <div class="main-content">
      <section class="section">
        <div class="section-header">
          <div class="section-header-back">
            <a href="/testimony" class="btn btn-icon"><i class="fas fa-arrow-left"></i></a>
          </div>
          <h1>Edit Testimony</h1>
          <div class="section-header-breadcrumb">
            <div class="breadcrumb-item active"><a href="#">Dashboard</a></div>
            <div class="breadcrumb-item"><a href="#">Testimony</a></div>
            <div class="breadcrumb-item">Edit Testimony</div>
          </div>
        </div>

        <div class="section-body">
          <h2 class="section-title">Edit Testimony</h2>
          <p class="section-lead">
            On this page you can edit testimony and fill in all fields.
          </p>

          <div class="row">
            <div class="col-12">
              <div class="card">
                <div class="card-header">
                  <h4>Update Your Testimony</h4>
                </div>
                <div class="card-body">
                  <form id="testimonyForm" enctype="multipart/form-data">
                    <input type="hidden" id="tokenInput" name="token">
                    <div class="form-group row mb-4">
                      <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Name</label>
                      <div class="col-sm-12 col-md-7">
                        <input type="text" class="form-control" name="name" value="<%=testimonyData.name %>">
                      </div>
                    </div>
                    <div class="form-group row mb-4">
                      <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Title</label>
                      <div class="col-sm-12 col-md-7">
                        <input type="text" class="form-control" name="title" value="<%=testimonyData.title %>">
                      </div>
                    </div>
                    <div class="form-group row mb-4">
                      <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Company Name</label>
                      <div class="col-sm-12 col-md-7">
                        <input type="text" class="form-control" name="companyName"
                          value="<%=testimonyData.companyName %>">
                      </div>
                    </div>
                    <div class="form-group row mb-4">
                      <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Testimony</label>
                      <div class="col-sm-12 col-md-7">
                        <input type="text" class="form-control" name="testimony" value="<%=testimonyData.testimony %>">
                      </div>
                    </div>
                    <div class="form-group row mb-4">
                      <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Rating</label>
                      <div class="col-sm-12 col-md-3">
                        <div class="rating">
                          <input type="radio" id="star5" name="rating" value="5" <%= testimonyData.rating == 5 ? 'checked' : '' %> required />
                          <label for="star5" title="Awesome"></label>
                          <input type="radio" id="star4" name="rating" value="4" <%= testimonyData.rating == 4 ? 'checked' : '' %> required />
                          <label for="star4" title="Great"></label>
                          <input type="radio" id="star3" name="rating" value="3" <%= testimonyData.rating == 3 ? 'checked' : '' %> required />
                          <label for="star3" title="Good"></label>
                          <input type="radio" id="star2" name="rating" value="2" <%= testimonyData.rating == 2 ? 'checked' : '' %> required />
                          <label for="star2" title="Not bad"></label>
                          <input type="radio" id="star1" name="rating" value="1" <%= testimonyData.rating == 1 ? 'checked' : '' %> required />
                          <label for="star1" title="Bad"></label>
                        </div>
                      </div>
                    </div>
                    
                    <div class="form-group row align-items-center">
                      <label class="form-control-label col-sm-3 text-md-right">Image</label>
                      <div class="col-sm-12 col-md-7">
                        <div class="custom-file">
                          <input type="file" name="image" class="custom-file-input" id="image"
                            data-filename="<%= testimonyData.image || '' %>">
                          <label class="custom-file-label" for="image">Choose File</label>
                        </div>
                        <div class="form-text text-muted">The image must have a maximum size of 1MB</div>
                      </div>
                    </div>
                    <div class="form-group row align-items-center">
                      <label class="form-control-label col-sm-3 text-md-right">Previous Image</label>
                      <img src="<%= testimonyData.image %>" alt="Previous Image" width="150">
                    </div>
                    <div class="form-group row mb-4">
                      <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
                      <div class="col-sm-12 col-md-7">
                        <button type="submit" class="btn btn-primary">Update Testimony</button>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
      </section>
    </div>

    <!-- Footer-->
    <%- include('../footer.ejs') %>
  </div>

  <!-- General JS Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
    integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous">
  </script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
    integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous">
  </script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.nicescroll/3.7.6/jquery.nicescroll.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>
  <script src="../assets/js/stisla.js"></script>

  <!-- JS Libraries -->
  <script src="../node_modules/selectric/public/jquery.selectric.min.js"></script>

  <!-- Template JS File -->
  <script src="../assets/js/scripts.js"></script>
  <script src="../assets/js/custom.js"></script>

  <!-- Page Specific JS File -->
  <script src="../assets/js/page/features-posts.js"></script>
  <!-- SweetAlert JS -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      $('#image').on('change', function () {
                var fileName = $(this).val().split('\\').pop();
                $(this).next('.custom-file-label').html(fileName);
            });

      const token = localStorage.getItem('token');
      document.getElementById('tokenInput').value = token;
    });

    document.getElementById('testimonyForm').addEventListener('submit', function (event) {
      event.preventDefault();

      Swal.fire({
        title: 'Loading...',
        text: 'Please wait!',
        allowOutsideClick: false,
        didOpen: () => {
          Swal.showLoading()
        }
      });

      const form = document.getElementById('testimonyForm');
      const formData = new FormData(form);
      const token = localStorage.getItem('token');

      fetch(`https://api-services.newus.id/api/admin/<%= testimonyData.id %>/testimony/update`, {
          method: 'PUT',
          headers: {
            'Authorization': `Bearer ${token}`
          },
          body: formData
        })
        .then(response => {
          if (response.ok) {
            return response.json();
          } else {
            return response.json().then(data => {
              throw new Error(data.message || 'Failed to update testimony');
            });
          }
        })
        .then(data => {
          Swal.fire({
            title: 'Success!',
            text: 'Testimony updated successfully.',
            icon: 'success',
          }).then(() => {
            window.location.href = '/testimony';
          });
        })
        .catch(error => {
          console.error('Error:', error);
          Swal.fire({
            title: 'Error!',
            text: 'Error updating testimony: ' + error.message,
            icon: 'error',
          });
        });
    });
  </script>
</body>

</html>