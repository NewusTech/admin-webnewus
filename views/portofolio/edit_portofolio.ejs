    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/34.1.0/classic/ckeditor.js"></script>
    <script src="../node_modules/selectric/public/jquery.selectric.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        CKEDITOR.replace('body');
        CKEDITOR.replace('closingDescription');
        CKEDITOR.replace('testimony');
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            $('#logo').on('change', function () {
                var fileName = $(this).val().split('\\').pop();
                $(this).next('.custom-file-label').html(fileName);
            });

            $('#image').on('change', function () {
                var fileName = $(this).val().split('\\').pop();
                $(this).next('.custom-file-label').html(fileName);
            });

            const token = localStorage.getItem('token');
            document.getElementById('tokenInput').value = token;
        });

        document.getElementById('portofolioForm').addEventListener('submit', function (event) {
            event.preventDefault();

            Swal.fire({
                title: 'Loading...',
                text: 'Please wait!',
                allowOutsideClick: false,
                didOpen: () => {
                    Swal.showLoading()
                }
            });

            // Sinkronisasi konten CKEditor dengan textarea asli
            for (instance in CKEDITOR.instances) {
                CKEDITOR.instances[instance].updateElement();
            }

            const form = document.getElementById('portofolioForm');
            const formData = new FormData(form);
            const token = localStorage.getItem('token');

            const tags = $('#tagportofolioSelect').val();
            formData.delete('tag[]');
            formData.append('tag', JSON.stringify(tags));

            const techs = $('#technologyPortofolio').val().map(function(tech) {
                return parseInt(tech, 10); // Mengonversi setiap nilai ke integer
            });

            formData.delete('tech[]');
            formData.append('tech', JSON.stringify(techs));



            fetch(`https://api-services.newus.id/api/admin/<%=portofolioData.id %>/portfolio/update/`, {
                method: 'PUT',
                headers: {
                    'Authorization': `Bearer ${token}`
                },
                body: formData
            })
            .then(response => {
                if (response.ok) {
                    return response.json();
                } else {
                    return response.json().then(data => {
                        throw new Error(data.message || 'Failed to update portofolio');
                    });
                }
            })
            .then(data => {
                Swal.fire({
                    title: 'Success!',
                    text: 'Portofolio updated successfully.',
                    icon: 'success',
                }).then(() => {
                    window.location.href = '/portofolio';
                });
            })
            .catch(error => {
                console.error('Error:', error);
                Swal.fire({
                    title: 'Error!',
                    text: 'Error updating portofolio: ' + error.message,
                    icon: 'error',
                });
            });
        });

        function generateSlug() {
            const title = document.getElementById('titleInput').value.trim().toLowerCase();
            const slug = title.replace(/\s+/g, '-');
            document.getElementById('slugInput').value = slug;
        }
    </script>
    
    <script>
    $(document).ready(function () {
      $('#tagportofolioSelect').select2({
        tags: true,
        tokenSeparators: [','],
        placeholder: "Enter Tags",
        allowClear: true,
        width: '100%',
        createTag: function (params) {
          var term = $.trim(params.term);
          if (term === '') {
            return null;
          }
          return {
            id: term,
            text: term,
            newTag: true
          };
        }
      });
    });

    $(document).ready(function () {
      $('#technologyPortofolio').select2({
        placeholder: "Select technologies",
        allowClear: true
      });
    });
  </script>
</body>

</html>
