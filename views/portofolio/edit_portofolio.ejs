<body>
    <div id="app">
        <!-- Sidebar -->
        <%- include('../sidebar.ejs') %>

        <!-- Main Content -->
        <div class="main-content">
            <section class="section">
                <div class="section-header">
                    <div class="section-header-back">
                        <a href="/service" class="btn btn-icon"><i class="fas fa-arrow-left"></i></a>
                    </div>
                    <h1>Edit Portofolio</h1>
                    <div class="section-header-breadcrumb">
                        <div class="breadcrumb-item active"><a href="#">Dashboard</a></div>
                        <div class="breadcrumb-item"><a href="#">Portofolio</a></div>
                        <div class="breadcrumb-item">Edit Portofolio</div>
                    </div>
                </div>

                <div class="section-body">
                    <h2 class="section-title">Edit Portofolio</h2>
                    <p class="section-lead">
                        On this page you can edit portfolio and fill in all fields.
                    </p>

                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h4>Update Your Portofolio</h4>
                                </div>
                                <div class="card-body">
                                    <form id="portofolioForm" enctype="multipart/form-data">
                                        <input type="hidden" id="tokenInput" name="token">
                                        <div class="form-group row align-items-center">
                                            <label class="form-control-label col-sm-3 text-md-right">Title</label>
                                            <div class="col-sm-6 col-md-9">
                                                <input type="text" class="form-control" id="titleInput" name="title"
                                                    value="<%= portofolioData.title %>" oninput="generateSlug()">
                                            </div>
                                        </div>
                                        <div class="form-group row mb-4">
                                            <label
                                                class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Slug</label>
                                            <div class="col-sm-12 col-md-7">
                                                <input type="text" class="form-control" id="slugInput" name="slug"
                                                    value="<%=portofolioData.slug %>">
                                            </div>
                                        </div>
                                        <div class="form-group row mb-4">
                                            <label
                                                class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Keyword</label>
                                            <div class="col-sm-12 col-md-7">
                                                <input type="text" class="form-control" name="keyword"
                                                    value="<%=portofolioData.keyword %>">
                                            </div>
                                        </div>
                                        <div class="form-group row mb-4">
                                            <label
                                                class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Excerpt</label>
                                            <div class="col-sm-12 col-md-7">
                                                <input type="text" class="form-control" name="excerpt"
                                                    value="<%=portofolioData.excerpt %>">
                                            </div>
                                        </div>
                                        <div class="form-group row mb-4">
                                            <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Body</label>
                                            <div class="col-sm-12 col-md-7">
                                                <textarea name="body" id="body"><%= portofolioData.body %></textarea>
                                            </div>
                                        </div>                                          
                                        <div class="form-group row mb-4">
                                            <label
                                                class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Nama Perusahaan</label>
                                            <div class="col-sm-12 col-md-7">
                                                <input type="text" class="form-control" name="portfolioYear"
                                                    value="<%=portofolioData.portfolioYear %>">
                                            </div>
                                        </div>
                                        <div class="form-group row mb-4">
                                            <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Tag Portofolio</label>
                                            <div class="col-sm-12 col-md-7">
                                                <select class="form-control" name="tag[]" id="tagportofolioSelect" multiple="multiple">
                                                    <% portofolioData.tags.forEach(function(tag) { %>
                                                        <option value="<%= tag.title %>" selected><%= tag.title %></option>
                                                    <% }); %>
                                                </select>
                                            </div>
                                        </div>                                           
                                        <div class="form-group row mb-4">
                                            <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Kategori Portofolio</label>
                                            <div class="col-sm-12 col-md-7">
                                                <select class="form-control selectric" name="KategoriportofolioId" id="">
                                                    <% portofoliocategoryData.forEach(function(category) { %>
                                                        <option value="<%= category.id %>"><%= category.title %></option>
                                                    <% }); %>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group row mb-4">
                                            <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Technology Portfolio</label>
                                            <div class="col-sm-12 col-md-7">
                                                <select class="form-control selectric" name="tech[]" id="technologyPortofolio" multiple="multiple">
                                                    <% technologyData.forEach(function(masterTech){ %>
                                                        <option value="<%= masterTech.id %>"
                                                            <% portofolioData.techs.forEach(function(tech){ %>
                                                                <% if (tech.tech.id === masterTech.id) { %> selected <% } %>
                                                            <% }); %>>
                                                            <%= masterTech.title %>
                                                        </option>
                                                    <% }); %>
                                                </select>
                                            </div>
                                        </div>
                                        
                                        <div class="form-group row align-items-center">
                                            <label class="form-control-label col-sm-3 text-md-right">Logo</label>
                                            <div class="col-sm-12 col-md-7">
                                                <div class="custom-file">
                                                    <input type="file" name="logo" class="custom-file-input" id="logo" data-filename="<%= portofolioData.logo %>">
                                                    <label class="custom-file-label" for="logo">Choose File</label>
                                                </div>
                                                <div class="form-text text-muted">The image must have a maximum size of 1MB</div>
                                            </div>
                                        </div>
                                        <div class="form-group row mb-4">
                                            <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Link Web</label>
                                            <div class="col-sm-12 col-md-7">
                                                <input type="text" class="form-control" name="webLink"
                                                    value="<%=portofolioData.webLink %>">
                                            </div>
                                        </div>
                                        <div class="form-group row mb-4">
                                            <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Link Apps</label>
                                            <div class="col-sm-12 col-md-7">
                                                <input type="text" class="form-control" name="appsLink"
                                                    value="<%=portofolioData.appsLink %>">
                                            </div>
                                        </div>
                                        <div class="form-group row align-items-center">
                                            <label class="form-control-label col-sm-3 text-md-right">Image</label>
                                            <div class="col-sm-12 col-md-7">
                                                <div class="custom-file">
                                                    <input type="file" name="image" class="custom-file-input" id="image" data-filename="<%= portofolioData.image %>">
                                                    <label class="custom-file-label" for="image">Choose File</label>
                                                </div>
                                                <div class="form-text text-muted">The image must have a maximum size of 1MB</div>
                                            </div>
                                        </div>
                                        <div class="form-group row mb-4">
                                            <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Alt Image</label>
                                            <div class="col-sm-12 col-md-7">
                                              <input type="text" class="form-control" name="altImage" value="<%=portofolioData.altImage %>">
                                            </div>
                                          </div>
                                          <div class="form-group row mb-4">
                                            <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Closing Description</label>
                                            <div class="col-sm-12 col-md-7">
                                              <textarea name="closingDescription" id="closingDescription"><%= portofolioData.closingDescription %></textarea>
                                            </div>
                                          </div>
                                          <div class="form-group row align-items-center">
                                            <label class="form-control-label col-sm-3 text-md-right">Galeri</label>
                                            <div class="col-sm-12 col-md-7">
                                              <div class="custom-file">
                                                <input type="file" name="galeri" class="custom-file-input" id="galeri" data-filename="<%= portofolioData.galeri %>" multiple>
                                                <label class="custom-file-label" for="galeri">Choose Files</label>
                                              </div>
                                              <div class="form-text text-muted">The image must have a maximum size of 1MB</div>
                                              <div id="gallery-preview" class="mt-2"></div> <!-- Tempat untuk menampilkan pratinjau gambar -->
                                            </div>
                                          </div>
                                          <div class="form-group row mb-4">
                                            <label
                                                class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Name Testimony</label>
                                            <div class="col-sm-12 col-md-7">
                                                <input type="text" class="form-control" name="nameTestimony"
                                                    value="<%=portofolioData.nameTestimony %>">
                                            </div>
                                        </div>
                                        <div class="form-group row mb-4">
                                            <label
                                                class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Date Testimony</label>
                                            <div class="col-sm-12 col-md-7">
                                                <input type="text" class="form-control" name="dateTestimony"
                                                    value="<%=portofolioData.dateTestimony %>">
                                            </div>
                                        </div>
                                          <div class="form-group row mb-4">
                                            <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Testimony</label>
                                            <div class="col-sm-12 col-md-7">
                                                <textarea name="testimony" id="testimony"><%= portofolioData.testimony %></textarea>
                                            </div>
                                        </div>        
                                        <div class="form-group row mb-4">
                                            <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
                                            <div class="col-sm-12 col-md-7">
                                                <button type="submit" class="btn btn-primary">Update Portofolio</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
            </section>
        </div>

        <!-- Footer-->
        <%- include('../footer.ejs') %>
    </div>

    <!-- General JS Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous">
    </script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous">
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.nicescroll/3.7.6/jquery.nicescroll.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>
    <script src="../assets/js/stisla.js"></script>

    <!-- JS Libraries -->
    <script src="../node_modules/selectric/public/jquery.selectric.min.js"></script>

    <!-- Template JS File -->
    <script src="../assets/js/scripts.js"></script>
    <script src="../assets/js/custom.js"></script>

    <!-- Page Specific JS File -->
    <script src="../assets/js/page/features-posts.js"></script>
